<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <HBox id="_IDHBox1">
                <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
                <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items="{jsonCountries>/ListCountry}" visible="true">
                    <items>
                        <core:Item id="_IDGenItem1" key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                    </items>
                </Select>
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
            </HBox>
            <HBox id="_IDHBox2">
                <Panel id="_IDPanel1">
                    <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonConfig>/visibleBtnShowCity}" press="onShowCity"/>
                    <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonConfig>/visibleBtnHideCity}" press="onHideCity"/>
                    <Table id="tableEmployee" items="{jsonEmployees>/Employees}">
                        <columns>
                            <Column id="_IDColumn1" visible="{jsonConfig>/visibleID}">
                                <header>
                                    <Label id="_IDLabel1" text="{i18n>tableId}"/>
                                </header>
                            </Column>
                            <Column id="_IDColumn2" visible="{jsonConfig>/visibleName}">
                                <header>
                                    <Label id="_IDLabel2" text="{i18n>tableName}"/>
                                </header>
                            </Column>
                            <Column id="_IDColumn3" visible="{jsonConfig>/visibleCountry}">
                                <header>
                                    <Label id="_IDLabel3" text="{i18n>tableCountry}"/>
                                </header>
                            </Column>
                            <Column id="_IDColumn4" visible="{jsonConfig>/visibleCity}">
                                <header>
                                    <Label id="_IDLabel4" text="{i18n>tableCity}"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDColumnListItem1" type="Active" press="showOrders">
                                <cells>
                                    <Label id="_IDLabelI1" text="{jsonEmployees>EmployeeID}"/>
                                    <Label id="_IDLabelI2" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                    <Label id="_IDLabelI3" text="{jsonEmployees>Country}"/>
                                    <Label id="_IDLabelI4" text="{jsonEmployees>City}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <HBox id="ordersTable">
                    </HBox>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
