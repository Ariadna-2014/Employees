<mvc:View controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <HBox id="_IDHBox1">
                <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                <Input id="inputEmployee" value="{/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
                <Select id="slCountry" selectedKey="{/CountryKey}" forceSelection="false" items="{/ListCountry}" visible="true">
                    <items>
                        <core:Item id="_IDGenItem1" key="{Key}" text="{Text}"/>
                    </items>
                </Select>
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
            </HBox>
            <HBox id="_IDHBox2">
                <Panel id="_IDPanel1">
                    <Table id="tableEmployee" items="{/Employees}">
                        <columns>
                            <Column id="_IDColumn1">
                                <header>
                                    <Label id="_IDLabel1" text="{i18n>tableId}"/>
                                </header>
                            </Column>
                            <Column id="_IDColumn2">
                                <header>
                                    <Label id="_IDLabel2" text="{i18n>tableName}"/>
                                </header>
                            </Column>
                            <Column id="_IDColumn3">
                                <header>
                                    <Label id="_IDLabel3" text="{i18n>tableCountry}"/>
                                </header>
                            </Column>
                            <Column id="_IDColumn4">
                                <header>
                                    <Label id="_IDLabel4" text="{i18n>tableCity}"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDColumnListItem1" type="Active" press="showPostalCode">
                                <cells>
                                    <Label id="_IDLabelI1" text="{EmployeeID}"/>
                                    <Label id="_IDLabelI2" text="{LastName}, {FirstName}"/>
                                    <Label id="_IDLabelI3" text="{Country}"/>
                                    <Label id="_IDLabelI4" text="{City}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
